<div class="flex flex-col items-center bg-gray-light">
  <div class="flex flex-col items-center w-full max-w-screen-md px-5 py-10">
    <div class="flex w-full mb-4">
      <div class="flex">
        <h1 class="text-4xl italic font-black text-gray-800">Agenda</h1>
      </div>
    </div>

    <div class="flex justify-between w-full mb-6">
      <div class="flex gap-2">
        <%= link_to 'All dates', sessions_path, class: "flex items-center px-5 py-1.5 rounded-full font-medium #{session_pill_class}" %>
        <% current_conference.session_dates.each do |session_date| %>
          <%= link_to session_date.strftime("%a, %d"),
                      sessions_path(on_date: session_date),
                      class: "flex items-center px-4 py-1.5 font-medium rounded-full #{session_pill_class(session_date)}" %>
        <% end %>
      </div>

      <div class="flex items-center justify-center p-2 bg-white rounded-full">
        <%= inline_svg_tag("icons/filters.svg", size: "18") %>
      </div>
    </div>

    <div class="flex flex-col w-full h-full">
      <% @sessions.each do |session| %>
        <%= render partial:'sessions/card', locals: { session: session, speaker: session.speakers.first } %>
      <% end %>
    </div>
  </div>
</div>
