<div class="flex flex-col items-center h-full bg-gray-light">
  <div class="flex flex-col items-center w-full h-full max-w-screen-md px-5 py-10">
    <div class="flex w-full mb-4">
      <h1 class="text-4xl italic font-black text-gray-800">Agenda</h1>
    </div>
    <%= render partial: 'sessions/filters', locals: { resource: :sessions } %>

    <% if active_filters? %>
      <div class="flex w-full mb-2 gap-2">
        <div class="flex flex-wrap ">
          <div class="h-8 py-1 text-base font-bold leading-tight">Active filters:</div>
        </div>
        <div class="flex flex-wrap gap-2">
          <% SessionQuery::STATUS_SCOPES.each do |name| %>
            <% next unless params[name] == "1" %>
            <div class="h-8 px-4 py-2 bg-green-dark bg-opacity-[.08] rounded-lg gap-2 inline-flex">
              <div class="gap-2 flex">
                <div class="w-4 h-4 bg-green-dark rounded-full"></div>
                <div class="text-xs font-medium"><%= t("views.status_filters.#{name}") %></div>
              </div>
              <div class="w-4 h-4">
                <% modified_params = request.query_parameters.deep_dup %>
                <% modified_params.delete(name) %>

                <%= link_to inline_svg_tag("icons/close.svg"), sessions_path(modified_params) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="flex flex-col w-full h-full">
      <% if @sessions.present? %>
        <%= render partial: 'sessions/card', collection: @sessions, as: :session %>
      <% elsif params[:starts_at].present? %>
        <div class="flex flex-col items-center justify-center w-full h-full">
          <p class="max-w-xs mb-4 font-bold text-center">No sessions found with the selected filters</p>
          <%= link_to 'Clear filters', sessions_path, class: "text-red underline font-bold italic text-lg" %>
        </div>
      <% else %>
        <div class="flex flex-col items-center justify-center w-full h-full">
          <div class="p-8 mb-6 bg-white rounded-full w-fit h-fit">
            <%= inline_svg_tag("icons/calendar.svg", size: "56", class: "fill-gray-400") %>
          </div>
          <p class="mb-4 font-bold text-center max-w-44">There are no sessions planned yet</p>
          <%= link_to 'Refresh', url_for, class: "text-red underline font-bold italic text-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
