<%= title "#{@session.title} - Rails World 2024" %>

<div class="relative flex flex-col items-center justify-between flex-1 pb-5 bg-grey-50">
  <div class="w-full px-5 pt-6 pb-12 bg-bottom bg-no-repeat bg-cover" style="background-image: url(<%= asset_path 'background_design.svg' %>)">
    <div class="flex flex-col max-w-screen-sm mx-auto">
      <div class="flex flex-row justify-between w-full mb-4 grow">
        <h1 class="text-[20px] italic font-bold"><%= @session.title %></h1>
        <% if current_user.sessions.pluck(:id).include?(@session.id) %>
          <%= button_to(
            session_attendee_path(session_id: @session.id, params: request.params[:starts_at]),
            method: :delete, form_class: "flex items-center ml-8"
          ) do %>
            <%= inline_svg_tag("icons/bookmark-full.svg") %>
          <% end %>
        <% else %>
          <%= button_to(
            session_attendee_path(session_id: @session.id, params: request.params[:starts_at]),
            form_class: "flex items-center ml-8"
          ) do %>
            <%= inline_svg_tag("icons/bookmark-outline.svg") %>
          <% end %>
        <% end %>
      </div>

      <% if @session.speakers.present? %>
        <div class="flex w-full mb-4 overflow-x-auto overflow-y-hidden gap-x-4 no-scrollbar">
          <% @session.speakers.each do |speaker| %>
            <a href="<%= speaker_path(speaker) %>" class="inline-flex items-center pl-4 border-l min-w-fit first:border-0 first:pl-0">
              <% if speaker.image&.attached? %>
                <div class="relative flex flex-col items-center justify-center w-8 h-8 bg-center bg-no-repeat bg-cover rounded-full min-w-8 min-h-8" style="background-image: url(<%= url_for(speaker.image) %>)">
                </div>
              <% else %>
                <div class="flex items-center justify-center w-8 h-8 p-3 rounded-full min-w-8 min-h-8 bg-slate-300">
                  <%= inline_svg_tag "icons/user_avatar.svg" %>
                </div>
              <% end %>

              <%= content_tag(:div, class: [
                  "flex flex-col ml-2",
                  "max-w-[200px]": @session.speakers.count > 1
              ] ) do %>
                <h2 class="italic font-black text-[13px]"><%= speaker.name %></h2>
                <p class="text-[13px] text-gray-400 font-normal"><%= speaker.job_title %></p>
              <% end %>
            </a>
          <% end %>
        </div>
      <% end %>

      <% if @session.tags.present? %>
        <div class="flex flex-row flex-wrap items-center gap-4 mb-4">
          <% @session.tags.each do |tag| %>
            <div class="bg-white border border-bluegray-600 rounded-lg px-3 py-[6px] text-[13px] text-bluegray-600">
              <%= tag.name %>
            </div>
          <% end %>
        </div>
      <% end %>

      <% if @session.description.present? %>
        <div class="mb-4 text-base font-medium leading-6">
          <%= simple_format(@session.description) %>
        </div>
      <% end %>

      <div class="flex flex-row items-center mb-2">
        <%= inline_svg_tag "icons/calendar.svg", class: "fill-grey-600 w-3 h-3 mr-2" %>
        <p class="font-sans text-[13px] text-grey-600">
          <%= @session.starts_at&.strftime("%b %d") %> -
          <%= @session.starts_at&.strftime("%H:%M") %> to <%= @session.ends_at&.strftime("%H:%M") %>
        </p>
      </div>

      <div class="flex flex-row items-center mb-3">
        <%= inline_svg_tag "icons/location.svg", class: "fill-grey-600 w-3 h-3 mr-2" %>
        <p class="text-[13px] text-grey-600"><%= @session.location.name %></p>
      </div>
    </div>
  </div>

  <% if @session.speakers.present? %>
    <div class="flex flex-col items-center w-full p-5 mt-6">
      <div class="flex flex-col items-start w-full max-w-screen-sm">
        <p class="text-black mb-4 text-[23px] font-bold italic">
          <%= "About the #{'speaker'.pluralize(@session.speakers.count)}" %>
        </p>
        <div class="flex flex-col w-full gap-4">
          <% @session.speakers.each do |speaker| %>
            <div class="w-full p-5 bg-white rounded-lg">
              <a href="<%= speaker_path(speaker) %>" class="flex items-center mb-2 mr-2">
                <% if speaker.image&.attached? %>
                  <div class="relative flex flex-col items-center justify-center w-12 h-12 bg-center bg-no-repeat bg-cover rounded-full min-w-12 min-h-12 " style="background-image: url(<%= url_for(speaker.image) %>)">
                  </div>
                <% else %>
                  <a class="flex flex-row items-center justify-center w-12 h-12 p-3 rounded-full bg-slate-300">
                    <%= inline_svg_tag "icons/user_avatar.svg" %>
                  </div>
                <% end %>
                <div class="flex flex-col ml-5">
                  <p class="text-base italic font-black text-red"><%= speaker.name %></p>
                  <p class="font-normal text-[13px] text-gray-400"><%= speaker.job_title %></p>
                </div>
              </a>
              <p class="text-base font-medium leading-5">
                <%= speaker.bio %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
