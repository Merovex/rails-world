<div class="flex flex-col items-center bg-gray-8 relative flex-1 justify-between ">
  <div class="bg-cover bg-bottom bg-no-repeat w-full pt-6 px-5 pb-12" style="background-image: url(<%= asset_path 'background_design.svg' %>)">
    <div class="flex flex-col max-w-screen-sm mx-auto">
      <div class="flex flex-row items-center mb-6">
        <% if @speaker&.profile&.image&.attached? %>
          <div class="flex flex-col items-center justify-center relative min-w-12 min-h-12 w-12 h-12 rounded-full">
            <%= image_tag url_for(@speaker.profile.image), class: "rounded-full absolute" %>
          </div>
        <% else %>
          <div class="w-12 h-12 min-w-12 min-h-12 rounded-full bg-slate-300 p-3 flex flex-row items-center justify-center">
            <%= image_tag url_for("user_avatar.svg") %>
          </div>
        <% end %>

        <div class="w-full flex flex-row items-center justify-between grow ml-5 ">
          <div class="flex flex-col">
            <p class="text-lg italic font-black text-red"><%= @speaker.profile.name %></p>
            <p class="font-normal text-sm"><%= @speaker.profile.job_title %></p>
          </div>
          <%= inline_svg_tag "circle_with_checkmark.svg", class: "fill-red-500" %>
        </div>
      </div>
      <h1 class="text-xl text-red-500 mb-4 font-bold mb-4"><%= @event.title %></h1>

      <div class="flex flex-row flex-wrap items-center gap-4 mb-[18px]">
        <% @event.tags.each do |tag| %>
          <div class="bg-white border border-blue-2 rounded-lg px-4 py-[6px] text-blue-2">
            <%= tag.name %>
          </div>
        <% end %>
      </div>

      <p class="font-normal mb-6 leading-6 text-base"><%= @event.description %></p>
      <div class="flex flex-row items-center mb-1">
        <%= inline_svg_tag "calendar.svg", class: "fill-gray-4 w-3 h-3 mr-2" %> <p class="text-[13px]"><%= @event.starts_at.strftime("%A, %b %d") %></p>
      </div>
      <div class="flex flex-row items-center mb-1">
        <%= inline_svg_tag "clock.svg", class: "stroke-gray-4 w-3 h-3 mr-2" %><p class="text-[13px]"><%= @event.starts_at.strftime("%H:%M") %> - <%= @event.ends_at.strftime("%H:%M") %></p>
      </div>
      <div class="flex flex-row items-center mb-1">
        <%= inline_svg_tag "location_pin.svg", class: "stroke-gray-4 w-3 h-3 mr-2" %><p class="text-[13px]"><%= @event.location.name %></p>
      </div>
    </div>

  </div>
  <div class="flex flex-col  max-w-screen-sm">
    <p class="text-black mb-4 text-2xl font-bold italic">About this speaker</p>
    <div class="p-5 rounded-lg bg-white">
      <div class="flex flex-row items-center mb-6">
        <% if @speaker&.profile&.image&.attached? %>
          <div class="flex flex-col items-center justify-center relative min-w-12 min-h-12 w-12 h-12  rounded-full">
            <%= image_tag url_for(@speaker.profile.image), class: "rounded-full absolute" %>
          </div>
        <% else %>
          <div class="w-12 h-12 rounded-full bg-slate-300 p-3 flex flex-row items-center justify-center">
            <%= image_tag url_for("user_avatar.svg") %>
          </div>
        <% end %>
        <div class="flex flex-col ml-5">
          <p class="text-lg italic font-black text-red"><%= @speaker.profile.name %></p>
          <p class="font-normal text-sm"><%= @speaker.profile.job_title %></p>
        </div>
      </div>
      <p>
        <%= @speaker.profile.bio %>
      </p>
    </div>
  </div>
</div>
