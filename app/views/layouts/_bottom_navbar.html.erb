<div class="sticky bottom-0 flex items-center justify-center py-1 bg-white border-t border-b border-grey-200">
  <div class="flex flex-row items-center justify-around w-full max-w-screen-sm text-[11px]">
    <a href="<%= sessions_path %>" class="<%= nav_text_class_for [sessions_path, root_path] %> flex flex-col items-center">
      <%= inline_svg_tag "icons/calendar.svg", class: nav_icon_class_for([sessions_path, root_path]) %>
      Agenda
    </a>
    <a href="<%= schedule_path %>" class="<%= nav_text_class_for [schedule_path] %> flex flex-col items-center justify-center">
      <%= inline_svg_tag "icons/clock.svg", class: nav_icon_class_for([schedule_path]) %>
      My Schedule
    </a>
    <a href="<%= profile_path(current_profile&.uuid) %>" class="<%= nav_text_class_for [profile_path(current_profile&.uuid), edit_profile_path(current_profile&.uuid)] %> flex flex-col items-center justify-center">
      <%= inline_svg_tag "icons/avatar_no_fill.svg", class: nav_icon_class_for([profile_path(current_profile&.uuid), edit_profile_path(current_profile&.uuid)]) %>
      Profile
    </a>
    <a href="<%= notifications_path %>" class="<%= nav_text_class_for [notifications_path, notification_settings_path] %> relative flex flex-col items-center justify-center">
      <%= inline_svg_tag "icons/bell.svg", class: nav_icon_class_for([notifications_path, notification_settings_path]) %>
      <% if unread_notifications.present? %>
        <div class="absolute -top-0.5 right-0 w-[18px] h-[18px]
              rounded-full bg-red flex justify-center items-center">
          <span class="text-[11px] text-white font-bold px-1">
            <%= unread_notifications.count < 10 ? unread_notifications.count : "+9" %>
          </span>
        </div>
      <% end %>
      Notifications
    </a>
    <a href="<%= about_path %>" class="<%= nav_text_class_for [about_path] %> flex flex-col items-center justify-center">
      <%= inline_svg_tag "icons/info_circle.svg", class: nav_icon_class_for([about_path]) %>
      About
    </a>
  </div>
</div>
